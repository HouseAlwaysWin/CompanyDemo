}


<div class="container" id="companyListVue">


    <!-- The Modal -->
    <div class="modal" id="insertUpdate">
        <div class="modal-dialog">
            <div class="modal-content">

                <validation-observer v-slot="{ handleSubmit,reset }" ref="observerRef">

                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title" v-if="companyInfo.modalType === 'insert'">新增</h4>
                        <h4 class="modal-title" v-else>更新公司{{ companyInfo.companyData.companyName}}</h4>
                        <button type="button" class="close" data-dismiss="modal" v-on:click="resetStatus">&times;</button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">

                        <form @@submit.prevent="handleSubmit(modalSubmit)">
                            <div class="form-group">
                                <label for="companyName">公司名稱</label>
                                <validation-provider rules="required" v-slot="{ errors }">
                                    <input type="text" class="form-control" id="companyName" v-model="companyInfo.companyData.companyName" />
                                    <span class="text-danger">{{ errors[0]}}</span>
                                </validation-provider>
                            </div>

                            <div class="form-group">
                                <label for="companyCode">代碼</label>
                                <validation-provider rules="required" v-slot="{ errors }">
                                    <input type="text" class="form-control" id="companyCode" v-model="companyInfo.companyData.companyCode" />
                                    <span class="text-danger">{{ errors[0]}}</span>
                                </validation-provider>
                            </div>

                            <div class="form-group">
                                <label for="phone">聯絡電話</label>
                                <validation-provider rules="required|min:6|numeric" v-slot="{ errors }">
                                    <input type="text" class="form-control" id="phone" v-model="companyInfo.companyData.phone" />
                                    <span class="text-danger">{{ errors[0]}}</span>

                                </validation-provider>
                            </div>

                            <div class="form-group">
                                <label for="taxId">統編</label>
                                <validation-provider rules="required|length:8|numeric" v-slot="{ errors }">
                                    <input type="text" class="form-control" id="taxId" v-model="companyInfo.companyData.taxId" />
                                    <span class="text-danger">{{ errors[0]}}</span>

                                </validation-provider>
                            </div>

                            <div class="form-group">
                                <label for="address">地址</label>
                                <validation-provider rules="required" v-slot="{ errors }">
                                    <input type="text" class="form-control" id="address" v-model="companyInfo.companyData.address" />
                                    <span class="text-danger">{{ errors[0]}}</span>

                                </validation-provider>
                            </div>

                            <div class="form-group">
                                <label for="webUrl">網址</label>
                                <validation-provider rules="required" v-slot="{ errors }">
                                    <input type="text" class="form-control" id="webUrl" v-model="companyInfo.companyData.webUrl" />
                                    <span class="text-danger">{{ errors[0]}}</span>

                                </validation-provider>
                            </div>

                            <div class="form-group">
                                <label for="owner">負責人</label>
                                <validation-provider rules="required" v-slot="{ errors }">
                                    <input type="text" class="form-control" id="owner" v-model="companyInfo.companyData.owner" />
                                    <span class="text-danger">{{ errors[0]}}</span>

                                </validation-provider>
                            </div>
                            <button class="btn btn-primary" type="submit">送出</button>
                        </form>
                    </div>

                </validation-observer>

            </div>
        </div>
    </div>



    @*公司列表*@
    <div class="row" v-cloak v-loading.fullscreen.lock="loading" element-loading-text="讀取中…" element-loading-background="rgba(0,0,0,0.1)" v-if="showArea.companyInfo">
        <div class="col custom-table-width">

            <div class="input-group col-md-4">
                <div class="form-group">
                    <select class="form-control" v-model="companyInfo.selectSearchType">
                        <option v-for="option in companyInfo.selectSearchOptions" v-bind:value="option.value">{{ option.name }}</option>
                    </select>
                </div>
                <input class="form-control py-2" type="search" value="search" placeholder="查詢關鍵字" v-model="companyInfo.searchText">
                <button class="btn btn-primary btn-block" type="button" v-on:click="searchBy()">
                    查詢
                </button>
            </div>

            <br />
            <h4>公司列表</h4>
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>公司ID</th>
                            <th>公司名稱</th>
                            <th>代碼</th>
                            <th>聯絡電話</th>
                            <th>統編</th>
                            <th>地址</th>
                            <th>網址</th>
                            <th>負責人</th>
                            <th>職員列表</th>
                            <th>產品列表</th>
                            <th>更新</th>
                            <th>刪除</th>
                        </tr>
                    </thead>
                    <tbody v-for="(data,index) in companyInfo.companyList.List" v-if="companyInfo.companyList.List.length >0">
                        <tr>
                            <td>{{ index+1  }}</td>
                            <td>{{ data.CompanyID }}</td>
                            <td>{{ data.CompanyName }}</td>
                            <td>{{ data.CompanyCode }}</td>
                            <td>{{ data.TaxID }}</td>
                            <td>{{ data.Phone }}</td>
                            <td>{{ data.Address }}</td>
                            <td>{{ data.WebsiteURL }}</td>
                            <td>{{ data.Owner }}</td>
                            <td>
                                <button type="button" class="btn btn-success" v-on:click="getEmployeesByCompanyID(data.CompanyID)">顯示會員列表</button>
                            </td>
                            <td>
                                <button type="button" class="btn btn-primary" v-on:click="showProductList(data.CompanyID)">顯示產品列表</button>
                            </td>
                            <td>
                                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#insertUpdate" v-on:click="setCompanyModalType('update',data)">更新</button>
                            </td>
                            <td>
                                <button type="button" class="btn btn-danger" v-on:click="deleteSubmit(data)">刪除</button>
                            </td>
                        </tr>
                    </tbody>
                    <tbody v-else>
                        <tr>
                            <td>查無結果</td>
                        </tr>
                    </tbody>
                </table>

                <div v-if="totalPages >1">
                    <el-pagination @@current-change="companySearchBy"
                                   layout="prev,pager,next,jumper"
                                   :current-page.sync="companyInfo.currentPage"
                                   :page-size="companyInfo.itemsPerPage"
                                   :total="companyInfo.companyList.TotalCount"
                                   :background="true">
                    </el-pagination>
                </div>
                <br />

                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#insertUpdate" v-on:click="setCompanyModalType('insert')">新增</button>
            </div>
        </div>
    </div>



